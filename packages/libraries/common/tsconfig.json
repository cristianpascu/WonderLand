{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {

        /* Basic Options */
        "target": "ES6",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        
        /* Strict Type-Checking Options */
        "strict": true,
        
        /* Module Resolution Options */
        "esModuleInterop": true,

        /* Advanced Options */
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,

        /* Basic Options */
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react",

        "tsBuildInfoFile": "./dist/.tsbuildinfo"
    },

    "include": ["./src"],
    "exclude": ["node_modules"]
}